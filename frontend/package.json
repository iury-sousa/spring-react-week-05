{
  "name": "dsvendas",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "type-check": "tsc --pretty --noEmit",
    "build": "vite build && shx cp _redirects ./dist/_redirects",
    "serve": "vite preview",
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier --loglevel warn --write \"./src/**/*.{js,jsx,ts,tsx,html,css,md,json}\" ",
    "lint": "yarn lint:format && yarn lint:fix",
    "prettier:fix": "prettier --write",
    "prettier:check": "prettier --check .",
    "prepare": "cd .. && husky install",
    "commit": "git-cz"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "apexcharts": "^3.29.0",
    "bootstrap": "^5.1.3",
    "react": "^17.0.0",
    "react-apexcharts": "^1.3.9",
    "react-dom": "^17.0.0",
    "sass": "^1.43.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitejs/plugin-react": "^1.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "shx": "^0.3.3",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "lint-staged": {
    "src/**/*.{json,md,html,css,js,jsx,ts,tsx}": [
      "yarn pretty-quick --staged",
      "eslint --fix",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./frontend/node_modules/cz-conventional-changelog"
    }
  }
}
